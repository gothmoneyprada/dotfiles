function gh {
  if [[ -x "$(command -v open)" ]]; then
    cmd=open
  elif [[ -x "$(command -v xdg-open)" ]]; then
    cmd=xdg-open
  fi

  url=$(git remote -v | grep origin | head -1 | awk '{print $2}' | sed -e 's/:/\//' -e 's/git@/https:\/\//' -e 's/\.git$//')
  if [[ "$url" = "" ]] || [[ "$cmd" = "" ]]; then
    echo "Unable to open git repo!"
    return 1
  fi

  echo "Fetching: ${url}"
  $cmd $url > /dev/null 2>&1
}
