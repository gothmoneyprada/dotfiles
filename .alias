alias vi='vim'
alias ll='ls -l'
alias la='ls -la'
alias l.='ls -d .*'
alias ld='ls -dl'
alias ltr='ls -ltr|tail'
alias lh='ls -ald .*'
alias c='clear'
alias cd..='cd ..'
alias ..='cd ..'
alias docs='cd ~/Documents'
alias dl='cd ~/Downloads'
alias ipgrep='egrep -o '\''[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}'\'''
alias foo='cat > ~/foo'
alias cfoo='cat ~/foo'
alias rmfoo='rm ~/foo'
alias vfoo='vim ~/foo'
alias myip="curl http://ipinfo.io/ip"
alias gtest='go test -v --bench . --benchmem'

# Kubernetes aliases
alias kc='kubectl'
alias kcd="kubectl delete"
alias kca="kubectl apply -f"
alias pods="kubectl get pods -o wide"
alias pod="kubectl describe pod"
alias svcs="kubectl get svc"
alias svc="kubectl describe svc"

# Docker aliases
alias drun="docker run --rm"
alias drund="docker run --rm -d"
alias dstart="docker start"
alias dkill="docker kill"
alias dps="docker ps"
alias dpsa="docker ps -a"
alias dpurge="docker images |egrep '<none>'|awk '{print \$3}'|xargs docker rmi --force"
